@model Mk4.Models.Movie

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" type="text/css" href="~/css/site.css" />

<h1>Details</h1>
<div class="shoppingCart">

    @await Component.InvokeAsync("ShoppingCart")

</div>
