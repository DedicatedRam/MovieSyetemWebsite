        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Metascore)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Metascore)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IMDB_Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IMDB_Rating)
